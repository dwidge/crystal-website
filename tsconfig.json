{
  "compilerOptions": {
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src/**/*", "lib/**/*"],
  "exclude": ["functions/**/*"],
  "ts-node": { "esm": true }
}
